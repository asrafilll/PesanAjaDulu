// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int         @id @default(autoincrement())
  fullName  String
  shopName  String      @unique
  email     String      @unique
  password  String
  phone     String      @unique
  address   String
  inventory Inventory[]
  formOrder FormOrder[]
}

model Inventory {
  id     Int    @id @default(autoincrement())
  title  String
  desc   String
  image  String
  price  Int
  user   User   @relation(fields: [userId], references: [id])
  userId Int
  form InventoryOnFormOrder[]
}

model InventoryOnFormOrder {
  inventory Inventory @relation(fields: [inventoryId], references: [id])
  inventoryId Int
  formOrder FormOrder @relation(fields: [formOrderId], references: [id])
  formOrderId Int
  @@id([inventoryId, formOrderId])
}

model FormOrder {
  id       Int        @id @default(autoincrement())
  tile     String
  desc     String
  endDate  DateTime
  user     User       @relation(fields: [userId], references: [id])
  userId   Int
  inventory InventoryOnFormOrder[]
  response Response[]
}

model Response {
  id              Int         @id @default(autoincrement())
  form            FormOrder   @relation(fields: [formId], references: [id])
  formId          Int
  customerName    String
  customerAddress String
  customerPhone   String
  isDelivery      Boolean
  order           OrderData[]
  totalOrder      Int
  createdAt       DateTime
  status          Status      @relation(fields: [statusId], references: [id])
  statusId        Int
}

model OrderData {
  id         Int        @id @default(autoincrement())
  itemName   String
  itemAmount Int
  total      Int
  response   Response[]
}

model Status {
  id       Int        @id @default(autoincrement())
  title    String
  response Response[]
}
